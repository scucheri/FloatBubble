<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="another activity" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:orientation="vertical">

        <Spinner
            android:layout_marginTop="20dp"
            android:entries="@array/gravities"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/gravity_spinner"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:entries="@array/layers"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/layers_spinner"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:entries="@array/drag_modes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/drag_mode_spinner"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:entries="@array/animations"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/animations_spinner"/>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/make_float_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建一个floatBubble" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/clear_float_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear float bubbles" />

    </LinearLayout>

